@model Example2.Models.Review

@{
    ViewData["Title"] = "Delete Review";
}

<div class="container mt-4" style="max-width: 800px;">
    <h2 class="text-danger mb-4">🗑️ Confirm Delete</h2>

    <div class="alert alert-warning">
        Are you sure you want to delete this review by <strong>@Model.ReviewerName</strong>?
    </div>

    <form asp-action="DeleteConfirmed" method="post">
        @Html.AntiForgeryToken()
        @Html.HiddenFor(m => m.Id)

        <button type="submit" class="btn btn-danger">
            <i class="bi bi-trash"></i> Delete
        </button>
        <a asp-action="Index" asp-route-productId="@Model.Id" class="btn btn-secondary ms-2">Cancel</a>
    </form>
</div>
