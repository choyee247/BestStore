@model IEnumerable<Example2.Models.Product>

@{
    ViewData["Title"] = "Top Rated Products";
}

<h2>🌟 Top Rated Products</h2>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Name</th>
            <th>Rating</th>
            <th>Reviews Count</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var product in Model)
        {
            <tr>
                <td>@product.ProductName</td>
                <td>@product.Rating</td>
                <td>@(product.Reviews?.Count ?? 0)</td>
                <td>
                    <a class="btn btn-info btn-sm" asp-controller="Product" asp-action="Details" asp-route-productId="@product.Id">View</a>
                </td>
            </tr>
        }
    </tbody>
</table>
