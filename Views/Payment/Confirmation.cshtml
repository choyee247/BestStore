@model Example2.Models.Order

<div class="container py-5" style="max-width: 700px;">
    <div class="card shadow border-0 rounded-4">
        <div class="card-body text-center">
            <h2 class="text-success mb-3">✅ Payment Successful</h2>
            <p class="fs-5">Thank you, <strong>@Model.CustomerName</strong>! Your payment for order <strong>#@Model.Id</strong> was successful.</p>

            <div class="mt-4">
                <a asp-controller="Order" asp-action="Create" class="btn btn-primary btn-lg">
                    <i class="bi bi-plus-circle"></i> Add Another Order
                </a>
            </div>
        </div>
    </div>
</div>
