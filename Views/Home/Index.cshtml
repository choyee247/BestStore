    <div class="text-white py-5">
        <h1 class="display-5 fw-bold mb-4" style="text-shadow: 2px 2px 4px rgba(0,0,0,0.5);">Bringing <span style="color: #FFD700">Best Products</span> to Life</h1>
        <p class="lead mb-5" style="font-size: 1.5rem; text-shadow: 1px 1px 2px rgba(0,0,0,0.5);">
            Discover everything from seasonal deals to the latest and greatest products.
        </p>
        <div class="d-flex justify-content-center gap-4">
            <a class="btn px-4 py-3 rounded-pill shadow-sm d-flex align-items-center"
               style="background-color: #FFD700; color: #333; font-size: 1.3rem; min-width: 180px; justify-content: center"
               asp-controller="Order" asp-action="Create">
                🛍️ Shop Now
            </a>
            <button class="btn px-4 py-3 rounded-pill shadow-sm d-flex align-items-center gap-2"
                    style="background-color: rgba(255,255,255,0.2); backdrop-filter: blur(5px); color: white; font-size: 1.3rem; min-width: 180px; justify-content: center; border: 1px solid rgba(255,255,255,0.3);"
                    data-bs-toggle="modal" data-bs-target="#videoModal">
                ▶️ Watch Video
            </button>
        </div>
    </div>
</div>

<!-- Summary Dashboard -->
<div class="container mb-5">
    <div class="row g-4">
        <!-- Product Summary -->
        <div class="col-lg-6">
            <div class="card rounded-4 shadow border-0 h-100">
                <div class="card-header bg-transparent border-0 py-3">
                    <h3 class="card-title mb-0 d-flex align-items-center gap-2">
                        <i class="bi bi-box-seam fs-3 text-purple"></i>
                        Product Summary
                    </h3>
                </div>
                <div class="card-body">
                    <div class="row g-3">
                        <div class="col-md-6">
                            <div class="p-4 rounded-4 bg-light-purple">
                                <div class="d-flex align-items-center gap-3">
                                    <div class="bg-white p-3 rounded-circle">
                                        <i class="bi bi-grid-1x2 fs-2 text-purple"></i>
                                    </div>
                                    <div>
                                        <p class="mb-1 text-muted">Total Products</p>
                                        <h2 class="mb-0 fw-bold">@Model.ProductSummary.TotalProducts</h2>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="p-4 rounded-4 bg-light-warning">
                                <div class="d-flex align-items-center gap-3">
                                    <div class="bg-white p-3 rounded-circle">
                                        <i class="bi bi-tags fs-2 text-warning"></i>
                                    </div>
                                    <div>
                                        <p class="mb-1 text-muted">Categories</p>
                                        <h2 class="mb-0 fw-bold">@Model.ProductSummary.TotalCategories</h2>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="p-4 rounded-4 bg-light-success">
                                <div class="d-flex align-items-center gap-3">
                                    <div class="bg-white p-3 rounded-circle">
                                        <i class="bi bi-star fs-2 text-success"></i>
                                    </div>
                                    <div>
                                        <p class="mb-1 text-muted">Top Rated</p>
                                        <h2 class="mb-0 fw-bold">@Model.ProductSummary.TopRated</h2>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="p-4 rounded-4 bg-light-info">
                                <div class="d-flex align-items-center gap-3">
                                    <div class="bg-white p-3 rounded-circle">
                                        <i class="bi bi-lightning fs-2 text-info"></i>
                                    </div>
                                    <div>
                                        <p class="mb-1 text-muted">New Arrivals</p>
                                        <h2 class="mb-0 fw-bold">@Model.ProductSummary.NewArrivals</h2>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="card-footer bg-transparent border-0 py-3">
                    <a asp-controller="Product" asp-action="Index" class="btn btn-purple rounded-pill px-4 py-2">
                        <i class="bi bi-box-arrow-right me-2"></i>Manage Products
                    </a>
                </div>
            </div>
        </div>

        <!-- Order Summary -->
        <div class="col-lg-6">
            <div class="card rounded-4 shadow border-0 h-100">
                <div class="card-header bg-transparent border-0 py-3">
                    <h3 class="card-title mb-0 d-flex align-items-center gap-2">
                        <i class="bi bi-cart-check fs-3 text-primary"></i>
                        Order Summary
                    </h3>
                </div>
                <div class="card-body">
                    <div class="row g-3">
                        <div class="col-md-6">
                            <div class="p-4 rounded-4 bg-light-primary">
                                <div class="d-flex align-items-center gap-3">
                                    <div class="bg-white p-3 rounded-circle">
                                        <i class="bi bi-cart fs-2 text-primary"></i>
                                    </div>
                                    <div>
                                        <p class="mb-1 text-muted">Total Orders</p>
                                        <h2 class="mb-0 fw-bold">@Model.OrderSummary.TotalOrders</h2>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="p-4 rounded-4 bg-light-success">
                                <div class="d-flex align-items-center gap-3">
                                    <div class="bg-white p-3 rounded-circle">
                                        <i class="bi bi-check-circle fs-2 text-success"></i>
                                    </div>
                                    <div>
                                        <p class="mb-1 text-muted">Completed</p>
                                        <h2 class="mb-0 fw-bold">@Model.OrderSummary.TotalOrders</h2>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="p-4 rounded-4 bg-light-warning">
                                <div class="d-flex align-items-center gap-3">
                                    <div class="bg-white p-3 rounded-circle">
                                        <i class="bi bi-clock fs-2 text-warning"></i>
                                    </div>
                                    <div>
                                        <p class="mb-1 text-muted">Pending</p>
                                        <h2 class="mb-0 fw-bold">@Model.OrderSummary.Pending</h2>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="p-4 rounded-4 bg-light-danger">
                                <div class="d-flex align-items-center gap-3">
                                    <div class="bg-white p-3 rounded-circle">
                                        <i class="bi bi-x-circle fs-2 text-danger"></i>
                                    </div>
                                    <div>
                                        <p class="mb-1 text-muted">Cancelled</p>
                                        <h2 class="mb-0 fw-bold">@Model.OrderSummary.Cancelled</h2>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="card-footer bg-transparent border-0 py-3">
                    <a asp-controller="Order" asp-action="Index" class="btn btn-primary rounded-pill px-4 py-2">
                        <i class="bi bi-list-check me-2"></i>View Orders
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Video Modal -->
<div class="modal fade" id="videoModal" tabindex="-1" aria-labelledby="videoModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" style="max-width: 315px;">
        <div class="modal-content bg-dark">
            <div class="modal-header border-0 pb-0">
