@model Example2.Models.Order

@{
    ViewData["Title"] = "Delete Order";
}

<h1>Delete Order</h1>

<h3>Are you sure you want to delete this order?</h3>
<div>
    <h4>Order #@Model.Id</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Customer Name</dt>
        <dd class="col-sm-10">@Model.CustomerName</dd>

        <dt class="col-sm-2">Email</dt>
        <dd class="col-sm-10">@Model.Email</dd>

        <dt class="col-sm-2">Total Items</dt>
        <dd class="col-sm-10">@Model.OrderItems.Sum(oi => oi.Quantity)</dd>

        <dt class="col-sm-2">Order Total</dt>
        <dd class="col-sm-10">@Model.OrderItems.Sum(oi => oi.Quantity * oi.Product.Price).ToString("C")</dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Delete" class="btn btn-danger" />
        <a asp-action="Index" class="btn btn-secondary">Back to List</a>
    </form>
</div>