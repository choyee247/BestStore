@model Example2.Models.Customer

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-sm border-0 rounded-4">
                <div class="card-header bg-primary text-white rounded-top-4">
                    <h4 class="mb-0"><i class="bi bi-person-plus-fill me-2"></i>Add New Customer</h4>
                </div>
                <div class="card-body">
                    <form asp-action="Create" method="post" class="needs-validation" novalidate>
                        <partial name="_CustomerForm" model="Model" />

                        <div class="d-flex justify-content-end">
                            <button type="submit" class="btn btn-success rounded-pill px-4 shadow-sm">
                                <i class="bi bi-check-circle me-1"></i> Save
                            </button>
                            <a class="btn btn-outline-secondary rounded-pill px-4 shadow-sm" asp-controller="Customers" asp-action="Index">Cancel</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
